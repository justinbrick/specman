{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "cargo test (workspace)",
			"type": "shell",
			"command": "cargo",
			"args": [
				"test",
				"--workspace"
			],
			"isBackground": false,
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"group": "test",
			"presentation": {
				"reveal": "always"
			}
		},
		{
			"label": "cargo check (workspace)",
			"type": "shell",
			"command": "cargo",
			"args": [
				"check",
				"--workspace"
			],
			"isBackground": false,
			"problemMatcher": [
				"$rustc"
			],
			"group": "build"
		}
	]
}